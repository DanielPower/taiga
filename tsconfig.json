{
  "compilerOptions": {
    "lib": ["esnext"],
    "rootDir": "./src",
    "outDir": "build",
    "types": [
      "lua-types/jit",
      "love-typescript-definitions"
    ],
    "noImplicitAny": true,
    "noImplicitThis":  true
  },
  "tstl": {
    "luaLibImport": "require",
    "luaTarget": "JIT",
    "noImplicitSelf": true,
    "sourceMapTraceback": true
  }
}
